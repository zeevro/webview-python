{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make settings.json",
            "type": "shell",
            "command": "./make_settings_json.py",
            "windows": {
                "command": "make_settings_json.py"
            },
            "options": {
                "cwd": "${workspaceFolder}/.vscode"
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": []
        },
        {
            "label": "pip install -e",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "${config:python.pythonPath} -m pip install -e .",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "setup.py sdist bdist_wheel",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "${config:python.pythonPath} setup.py sdist bdist_wheel",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "test",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "${config:python.pythonPath} test.py",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        },
    ]
}